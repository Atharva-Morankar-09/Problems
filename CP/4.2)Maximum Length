
GFG Link - https://practice.geeksforgeeks.org/problems/84963d7b5b84aa24f7807d86e672d0f97f41a4b5/1

class Solution {
public:
    int solve(int a, int b, int c) {
        vector<int> x = {a,b,c};
        sort(x.begin(),x.end());
        
        if(x[2]<=2*(x[0]+x[1]-1)+4){
            return a+b+c;
        }
      return -1;    
    }
};
