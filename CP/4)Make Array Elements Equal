
GFG - https://practice.geeksforgeeks.org/problems/1f05c7c12b1084f270c57566b2110967c046730d/1

class Solution {
  public:
    long long int minOperations(int N) {
        long long ans;
        long long n=N/2;
        
        if(N%2==1){
            ans = n*(n+1);
        }
        else{
            ans = n*n;
        }
      return ans;    
    }
};
